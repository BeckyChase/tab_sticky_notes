{
  "manifest_version": 3,
  "name": "Tab Sticky Notes",
  "version": "1.0",
  "description": "Add customizable sticky notes to browser tabs.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["stickers/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "privacy_policy": "https://github.com/BeckyChase/tab_sticky_notes/wiki/privacy%E2%80%90policy.html"
}